{
  "name": "grafana-kafka-datasource-dev",
  "dockerFile": "Dockerfile",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/zsh"
      },
      "extensions": [
        "golang.Go",
        "ms-python.python",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "grafana.vscode-grafana"
      ]
    }
  },
  "runArgs": ["--network=host"],
  "postCreateCommand": "go mod tidy && npm install && npm exec playwright install chromium --with-deps && npx playwright install-deps"
}
